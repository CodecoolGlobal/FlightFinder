@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @*@{
                var json = ViewData["MyJSON"];
        }*@


    <form>
        <table class="criterias">
            <tr>
                <td>
                    <label>Departure</label>
                </td>
                <td>
                    <input id="countries" />
                </td>
                <td>
                    <select id="selectpicker">
                    </select>
                </td>
                <td>
                    <label for="start">Depart:</label>

                </td>
                <td>
                    <input type="date" id="start" name="trip-start"
                           value="2019-11-14"
                           min="2019-01-01" max="2019-12-31">
                </td>
            </tr>
            <tr>
                <td>
                    <label>Destination</label>
                </td>
                <td>
                    <input id="countries2" />
                </td>
                <td>
                    <select id="selectpicker2">
                    </select>
                </td>
                <td>

                    <label for="end">Return:</label>
                </td>
                <td>
                    <input type="date" id="end" name="trip-end"
                           value="2019-11-15"
                           min="2019-01-01" max="2019-12-31">
                </td>
                <td>
                    <select id="cabinClass">
                        <option>Economy</option>
                        <option>Business</option>
                    </select>
                </td>
            </tr>
        </table>
        <button id="submitButton" name="submit" type="button">Search</button>


    </form>
    <div id="results">
        <ul id="itineraries">
        </ul>
    </div>


</div>

<template class="itineraryTemplate">
    <li class="listitem">
        <table class="table">
            <tr class="tablerow">
                <td class="flightInfos">
                    <ul class="outAndInboundFlights">
                        <li class="outboundFlight">
                            <ul>
                                <li class="carrierIMG"></li>
                                <li class="departure"></li>
                                <li class="duration"></li>
                                <li class="arrival"></li>
                            </ul>
                        </li>
                        <li class="inboundFlight">
                            <ul>
                                <li class="carrierIMG"></li>
                                <li class="departure"></li>
                                <li class="duration"></li>
                                <li class="arrival"></li>
                            </ul>
                        </li>
                    </ul>
                </td>
                <td class="priceAndLink">
                    <ul>
                        <li class="price"></li>
                        <li class="link"></li>
                    </ul>
                </td>
            </tr>
        </table>
    </li>
</template>
